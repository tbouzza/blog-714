<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<%= cl_image_tag("f1nncnc7p32wokiqcy4j9cvoe67p",
                width: 400, height: 300, crop: :fill)
%>


<%= cl_image_tag("wd7x2vfocnfwnvt9cj6f",
      width: 150, height: 150, crop: :thumb, gravity: :face)
%>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td>
          <%= link_to 'Show',
                      article_path(article),
                      class: 'btn btn-xs btn-primary' %></td>

        <td><%= link_to 'Edit',
                        edit_article_path(article),
                        class: 'btn btn-xs btn-warning' %></td>

        <td><%= link_to 'Destroy',
                        article,
                        method: :delete,
                        class: 'btn btn-xs btn-danger',
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: 'btn btn-xs btn-success' %>
