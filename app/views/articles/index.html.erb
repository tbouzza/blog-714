<p id="notice"><%= notice %></p>

<h1>Articles</h1>



<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= cl_image_tag("f1nncnc7p32wokiqcy4j9cvoe67p",
                      width: 400, height: 300, crop: :fill)
      %>
      <h1>"Beyonc√© Was Not Built In One Day!"</h1>
    </div>
  </div>
  <div class="row">
    <%= link_to '+ Article', new_article_path, class: 'btn btn-xs btn-success'
    %>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.body %></td>
            <td>
              <%= link_to 'Show',
                          article_path(article),
                          class: 'btn btn-xs btn-primary' %></td>

            <td><%= link_to 'Edit',
                            edit_article_path(article),
                            class: 'btn btn-xs btn-warning' %></td>

            <td><%= link_to 'Destroy',
                            article,
                            method: :delete,
                            class: 'btn btn-xs btn-danger',
                            data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
